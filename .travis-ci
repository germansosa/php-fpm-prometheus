sudo: required

language: go

services:
  - docker

before_install:
  - docker run --rm -v $(pwd):/build/src/phpfpm_exporter -e GOPATH=/build -w /build/src/phpfpm_exporter golang:1.7 go build -a -o phpfpm_exporter
  - docker build -t gsosa/phpfpm_exporter .

script:
  - docker login -u="$DOCKER_USERNAME" -p="$DOCKER_PASSWORD"
  - docker push gsosa/phpfpm_exporter
